<Window x:Class="LOR_FBA.ExportPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LOR_FBA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">

    
    <Grid>
        <ComboBox x:Name="CategoryComboBox"
                  Width="250"
                  Height="30"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="0,10,0,0"
                  ItemsSource="{Binding CategoryList}"
                  SelectedItem="{Binding SelectedCategory}" SelectionChanged="CategoryComboBox_SelectionChanged" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="100,317,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
